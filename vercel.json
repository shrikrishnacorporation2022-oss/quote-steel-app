{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api).*)",
            "destination": "/client/index.html"
        }
    ]
}